pipeline {
    agent any

    tools {
        nodejs 'node18'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'Ayoub_Jenkins_CICD', url: 'https://github.com/Chaima-hanafi/Task-Manager.git'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'cd task-service && npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'cd task-service && npm run build'
            }
        }

        stage('Test') {
            steps {
                sh 'cd task-service && npm test'
            }
        }

        stage('Deploy') {
            steps{
                sh ''' 
                  cd task-service
                  nohup node index.js &
                  '''
            }
        }
    }

    post {
        success {
            echo 'Build succeeded ✅'
        }
        failure {
            echo 'Build failed ❌'
        }
    }
}
